{% comment %}
  Shopify Compare
  Usage:
    - Markup: {%- render 'button-compare', product: product -%}
    - Place this snippet inside your existing product card snippet
  Parameters:
    - product: <Shopify product> (required)
{% endcomment %}

{%- if product.handle != blank -%}
  <button class="button button-compare button--secondary {{ settings.compare_size }}" type="button" aria-label="Add to compare" class="btnwish" button-compare data-product-handle="{{ product.handle }}">
    <style scoped>
      .icon {
        fill: transparent;
       
        transition: fill 0.3s ease;
      }
/*       .active .icon { fill: #000;} */
      .btnwish{ position:relative; z-index:1; width:50px;}
    </style>
    {%- render 'product-icon-compare' -%}
   {%- render 'icon-solidcompare' -%}
  </button>
{%- endif -%}